{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "declaration": true,
    "target": "es2017",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "lib",
    "baseUrl": "."
  },
  "include": ["src/**/*"]
}
