{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["DOM", "ESNext"],
    "importHelpers": false,
    "esModuleInterop": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "outDir": "lib",
    "baseUrl": "./src",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
